<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size:"60x60", fallback: "no_image.jpg" %>
<table>
  <today>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </today>
</table>
<%= link_to edit_user_path(user.id) do %>
  <div>
    <i class="fas fa-user-cog"></i>
  </div>
<% end %>

