<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user', user:@user %>
      <%= render 'users/form', book:@book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th>
                <%= link_to user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, size:"40x40", fallback: "no_image_icon.jpg" %>
                <% end %>
              </th>
              <th>
                <%= user.name %>
              </th>
              <th>
                <div>
                  <%= link_to "Show", user_path(user.id) %>
                </div>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

